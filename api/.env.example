# App
NODE_ENV=development
PORT=3000
CORS_ORIGINS=http://localhost:3001,http://localhost:3002

# Database
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=vit_platform
DB_SSL=false
DB_DEFAULT_SCHEMA=platform

# Auth
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_refresh_secret
JWT_REFRESH_EXPIRES_IN=7d
FORCE_MFA_FOR_ADMINS=false
BOOTSTRAP_TOKEN=your_bootstrap_token
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Email (Mailgun SMTP)
# Get SMTP credentials from Mailgun: Sending > Domain > SMTP credentials
EMAIL_HOST=smtp.mailgun.org
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=postmaster@your-domain.mailgun.org
EMAIL_PASSWORD=your_mailgun_smtp_password
EMAIL_FROM=noreply@your-domain.com

# App URLs (for links in emails)
FRONTEND_URL=http://localhost:3002
TENANT_ADMIN_APP_URL=http://localhost:3002
SYSTEM_ADMIN_APP_URL=http://localhost:3001
# Optional: deep link base for driver app (e.g. vitapp:// or https://app.example.com)
DRIVER_APP_URL=

# Optional: comma-separated emails to notify when a new tenant is created (overrides querying PLATFORM_ADMIN users)
# PLATFORM_ADMIN_NOTIFY_EMAILS=admin@example.com

# Feature flags: set to false to disable these emails (default: true)
# SEND_NEW_TENANT_EMAIL=false
# SEND_TENANT_ADMIN_WELCOME_EMAIL=false
